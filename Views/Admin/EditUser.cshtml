@model Clubmates.web.Models.AccountViewModel.UserViewModel
@{
    ViewBag.Title = "Edit User";
}

<div class="clubmates-form-container">
  
      <form class="form" asp-action="EditUser" asp-controller="Admin" method="post">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Role">Role</label>
                        @Html.DropDownListFor(
                                 x => x.Role,
                                 Model.Roles,
                                 "Select a role",
                                 new { @id = "Role", @class = "form-control" })
                    </div>
                    <div class="form-group btnTop">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
      </form>
</div>
