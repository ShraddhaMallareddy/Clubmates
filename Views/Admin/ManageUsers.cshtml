@model IEnumerable<Clubmates.web.Models.AccountViewModel.UserViewModel>

@{
    ViewBag.Title = "Manage Users";
}
<div class="form-container">
@if(Model!=null && Model.Any())
{
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach(var usr in Model)
            {
                <tr>
                    <td>@usr.Name</td>
                    <td>@usr.Email</td>
                    <td>@usr.Role</td>
                    <td>
                        <a asp-action="EditUser" asp-controller="Admin" asp-route-email="@usr.Email" class="btn btn-primary">Edit</a>
                            <a asp-action="DeleteUser" asp-controller="Admin" asp-route-email="@usr.Email" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No users found
    </div>
}
<a asp-action="CreateUser" asp-controller="Admin" class="btn btn-success mb-3 btn-primary">Create  new User</a>

</div>